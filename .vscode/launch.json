                "args": [
                    "run",
                    "--bin=platformer-2d",
                    "--package=platformer-2d"
                ],
                "filter": {
                    "name": "platformer-2d",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"],
        },
